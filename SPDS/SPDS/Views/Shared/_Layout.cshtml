<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stopping Power Data System</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CONTENT.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/LOGIN.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/table.js"></script>
<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<script src="~/Scripts/highchart.js"></script>

</head>
<body>

    @if (Request.IsAuthenticated)
    {

        if (User.IsInRole("Reviewer"))
        {
            <div class="NavWrap">
                <ul class="navbar">
                    <li class="liLeft">@Html.ActionLink("THE STOPPING POWER DATA SYSTEM", "View_Data", "Data")</li>
                    <li class="liLeft">@Html.ActionLink("About", "About", "About")</li>
                    <li class="liLeft">@Html.ActionLink("Submit Data", "Submit_Data", "Data")</li>
                    <li class="liLeft">@Html.ActionLink("Review Data", "Review_Data", "Data")</li>
                    <li class="liLeft">@Html.ActionLink("Administration", "Administrator", "Manage")</li>

                    <li class="Right">
                        <a href="">@Html.Encode(User.Identity.Name)</a>
                        <ul>
                            <li class="dropdown">@Html.ActionLink("Profile", "ProfilePage", "Account")</li>
                            <li class="dropdown">@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        }

        if (User.IsInRole("Submitter"))
        {
            <div class="NavWrap">
                <ul class="navbar">
                    <li class="liLeft">@Html.ActionLink("THE STOPPING POWER DATA SYSTEM", "View_Data", "Data")</li>
                    <li class="liLeft">@Html.ActionLink("About", "About", "About")</li>
                    <li class="liLeft">@Html.ActionLink("Submit Data", "Submit_Data", "Data")</li>

                    <li class="Right">
                        <a href="">@Html.Encode(User.Identity.Name)</a>
                        <ul>
                            <li class="dropdown">@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        }
    }

    else
    {
        <div class="NavWrap">

            <ul class="navbar">


                <li class="liLeft">@Html.ActionLink("THE STOPPING POWER DATA SYSTEM", "View_Data", "Data")</li>
                <li class="liLeft">@Html.ActionLink("About", "About", "About")</li>
                <!-- <li class="Right">
                    @Html.ActionLink("Log In", "LogIn", "Account")
                    <ul>
                        <li class="dropdown">@Html.ActionLink("Register", "createAccount", "Account")</li>

                    </ul>
                </li>
                -->
                <li class="Right">@Html.ActionLink("Log In", "LogIn", "Account")</li>
            </ul>
        </div>
    }





        @if(TempData["notice"] != null)
        {
            <h2>@TempData["notice"]</h2>
        }
        @RenderBody()

        <footer>
            <div class="footWrap">
                <div class="footTxt">THE STOPPING POWER DATA SYSTEM - Developed by ASE</div>
            </div>
        </footer>




        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
</html>